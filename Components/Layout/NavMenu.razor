<div class="flex justify-between items-center h-36">
    <NavLink href="/">
        <img class="h-20 w-20" src="/icon.png" alt="icon" />
    </NavLink>
    <div class="gap-8 items-center justify-center">
        <nav class="">
            @foreach(Route route in routes)
            {
            <NavLink class="h-min" href=@route.Href>
                @route.Title
            </NavLink>
            }
        </nav>
    </div>
    <div>
        <button>
            Cart
        </button>
        <button>
            Login
        </button>
    </div>
</div>

@code {

    private struct Route
    {
        public string Href { get; set; }
        public string Title { get; set; }
    }
    private static Route[] routes = [
        new Route
        {
            Href = "/",
            Title = "Home"
        },
        new Route
        {
            Href = "/about",
            Title = "About Us",
        }
    ];

}